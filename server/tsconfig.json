{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "src/tests/GameRoom.test.ts"],
  "exclude": ["node_modules", "test/**/*", "./build"],
  "paths": {
    "~/*": ["./*"]
  }
}

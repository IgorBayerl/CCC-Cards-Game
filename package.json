{
  "name": "ccc-cards-game",
  "private": true,
  "workspaces": [
    "server",
    "client",
    "types"
  ],
  "scripts": {
    "dev-server": "pnpm --filter server dev",
    "dev-client": "pnpm --filter client dev",
    "dev": "npm-run-all --parallel dev-server dev-client",
    "start": "npm-run-all --parallel dev-server start-client",
    "start-server": "pnpm --filter server start",
    "build-client": "pnpm --filter client build",
    "start-client": "pnpm --filter client start",
    "tunnel-client": "cloudflared tunnel --url http://localhost:3000",
    "tunnel-server": "cloudflared tunnel --url http://localhost:2567"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
